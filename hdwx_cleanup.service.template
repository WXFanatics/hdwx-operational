[Unit]
Description=hdwx_cleanup
PartOf=hdwx.target

[Service]
ExecStart=$pathToPython cleanupHDWX.py $timeToPurge $targetDir
ExecStop=$pathToPython clean-all.sh
Restart=always
RestartSec=7200
WorkingDirectory=$pathToClone
User=$myUsername
SyslogIdentifier=hdwx_cleanup

[Install]
WantedBy=hdwx.target